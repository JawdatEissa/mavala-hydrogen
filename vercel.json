{
  "buildCommand": "npm run build",
  "framework": "remix",
  "functions": {
    "app/routes/**/*.tsx": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "headers": [
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(jpg|jpeg|png|webp|gif|ico))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "images": {
    "domains": ["images.squarespace-cdn.com"],
    "remotePatterns": [
      {
        "protocol": "https",
        "hostname": "**.squarespace-cdn.com"
      }
    ],
    "formats": ["image/avif", "image/webp"],
    "minimumCacheTTL": 31536000
  }
}

